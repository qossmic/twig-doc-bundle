#twig-doc-container {
    margin-top: 50px;
}
#twig-doc-container .breakpoints {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-content: stretch;
    gap: 5px;
    background-color: white;
    padding-top: 5px;
    z-index:100;
}

#twig-doc-container #screenwidth {
    text-align: center;
    background: lightgray;
    padding: 7px 20px;
}

#twig-doc-container .breakpoints div {
    padding: 7px 20px;
    flex-grow: 1;
}

#twig-doc-container .navigation {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    background: white;
    text-align: center;
    border-bottom: 1px darkgray solid;
    z-index: 100;
}

#twig-doc-container .navigation ul {
    display: flex;
    position: relative;
    flex-direction: row;
{# margin-bottom: 25px; #}
}

#twig-doc-container .navigation ul ul {
    display: none;
    position: absolute;
}

#twig-doc-container .navigation li {
    list-style: none;
}

#twig-doc-container .navigation li a {
    padding: 5px 15px;
}


#twig-doc-container .navigation li:hover ul {
    display: flex;
}


#twig-doc-container .twig-doc-component {
    background-color: #efefef;
    margin-bottom: 10px;
    padding: 20px 0;
    border-radius: 20px;
}
#twig-doc-container .twig-doc-component-description {
    padding: 20px;
}

#twig-doc-container .twig-doc-component-description h3 {
    text-transform: none;
}
#twig-doc-container .twig-doc-component-description p,
#twig-doc-container .twig-doc-variation-description p {
    line-height: 1.2em;
    margin: 5px 0 0 0;
}
#twig-doc-container .twig-doc-component-description h4 {
    margin-top: 15px;
}

#twig-doc-container .twig-doc-component-description h4:first-child {
    margin-top: 0;
}

#twig-doc-container .twig-doc-component-configuration {
    display: flex;
    flex-direction: row;
    padding-top: 20px;
    gap: 50px;
}
#twig-doc-container .twig-doc-component-configuration div {
{# padding: 20px; #}
}

#twig-doc-container .twig-doc-component-variation {
    background-color: white;
    margin-top: 10px;
    border: 1px solid #000000;
}

#twig-doc-container .twig-doc-component-examples h4 {
    padding-left: 20px;
}

#twig-doc-container .twig-doc-variation {
    margin-bottom: 20px;
}

#twig-doc-container .twig-doc-variation .twig-doc-variation-description {
    padding-left: 20px;
}

.twig-doc-body {
    padding: 15px;
}

.twig-doc-variation h5 {
    margin: 0;
    padding: 10px 20px;
    display: inline-block;
}

.twig-doc-variation h5:hover, .twig-doc-variation h5.active {
    background-color: #000000;
    color: #ffffff;
    cursor: pointer;
}

.twig-doc-variation-body {
    display: none;
}

.twig-doc-variation-body.active {
    display: block;
}

.twig-doc-viewport-container {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    border: none;
    padding: 10px;
    position: relative;
    overflow-x: scroll;
}
.twig-doc-viewport {
    padding: 0;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    min-width: 240px;
    margin: 0 auto;
    white-space: nowrap;
    text-align: center;
    position: relative;
    resize: horizontal;
    overflow-x: auto;
    outline: 1px solid #000000;
}

.twig-doc-iframe {
    width: 100%;
    flex-grow: 1;
    border: 0;
}